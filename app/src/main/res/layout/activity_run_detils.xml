<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">
    <com.ffn.zerozeroseven.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.ffn.zerozeroseven.view.TitleView>
    <com.ffn.zerozeroseven.view.UserDefineScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="17dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="20dp"
                android:text="188****8888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21dp"
                android:layout_marginTop="20dp"
                android:text="取件时间 2017-12-12"
                android:textSize="13sp" />

            <View
                android:id="@+id/view_line1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/tv_phone"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="7dp"
                android:background="@color/line_color" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="跑腿事项:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="快递"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="取件地址:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_getadr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="门卫室"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="送达地址:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_arradr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="南门口"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="物品重量:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="10kg"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="物品价值:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_peoplephone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="         备注:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="快递公司:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_gongsi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="顺丰"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="快递员电话:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_runphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="18888888888"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="          其他:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center"
                android:text="          小费:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_smallmoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/text_show_color"
                android:textSize="16sp" />
        </LinearLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="88dp">
            <TextView
                android:id="@+id/tv_bottom"
                android:layout_marginLeft="32dp"
                android:textSize="16sp"
                android:textColor="@color/text_show_color"
                android:text="跑腿费:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_bottom1"
                android:layout_toRightOf="@+id/tv_bottom"
                android:textSize="16sp"
                android:textColor="@color/tab_under_line"
                android:text="  ¥:1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_qian"
                android:layout_toRightOf="@+id/tv_bottom1"
                android:textSize="16sp"
                android:textColor="@color/tab_under_line"
                android:text="2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_sub"
                android:layout_marginRight="13dp"
                android:text="抢单"
                android:textColor="@color/white"
                android:layout_width="221dp"
                android:layout_height="50dp"
                android:background="@drawable/circlebutton"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    </com.ffn.zerozeroseven.view.UserDefineScrollView>
</LinearLayout>