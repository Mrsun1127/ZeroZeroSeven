<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="200dp"
                android:layout_height="158dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27dp" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp">

                <Button
                    android:id="@+id/bt_ok"
                    android:layout_width="57dp"
                    android:layout_height="22dp"
                    android:background="@drawable/interalred"
                    android:text="开奖中"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/bt_ok"
                    android:text="系统正在开奖中，大概30秒后左右开奖"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />

                <cn.iwgang.countdownview.CountdownView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ok"
                    android:layout_marginTop="15dp"
                    app:isHideTimeBackground="true"
                    app:isShowHour="true"
                    app:isShowMinute="true"
                    app:isTimeTextBold="true"
                    app:timeTextColor="#FE0000"
                    app:timeTextSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="23dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/bt_status"
                    android:layout_width="57dp"
                    android:layout_height="22dp"
                    android:background="@drawable/interalred"
                    android:text="进行中"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/bt_status"
                    android:text="正在加载中"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />

                <ProgressBar
                    android:id="@+id/pb_watch"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tv_need"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pb_watch"
                    android:layout_marginTop="5dp"
                    android:text="加载中"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/pb_watch"
                    android:layout_marginTop="5dp"
                    android:text="加载中"
                    android:textSize="9sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="23dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/bt_status1"
                    android:layout_width="57dp"
                    android:layout_height="22dp"
                    android:background="@drawable/interalred"
                    android:text="已开奖"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/bt_status1"
                    android:text="正在加载中"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_below="@+id/tv_name1"
                    android:layout_marginTop="8dp"
                    android:background="#F3F3F3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_user"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:background="@drawable/courier_selfie" />

                    <TextView
                        android:id="@+id/tv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_toRightOf="@+id/iv_user"
                        android:text="获奖用户: "
                        android:textColor="#666666"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_toRightOf="@+id/tv_one"
                        android:text="加载中"
                        android:textColor="#0080FE"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_one"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_user"
                        android:text="本期参与: "
                        android:textColor="#666666"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_usercount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_username"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_one"
                        android:text="加载中"
                        android:textColor="#FF0101"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_two"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_user"
                        android:text="幸运号码: "
                        android:textColor="#666666"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_usernumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_usercount"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_one"
                        android:text="加载中"
                        android:textColor="#666666"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_three"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_user"
                        android:text="开奖时间: "
                        android:textColor="#666666"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_usertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_usernumber"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_one"
                        android:text="加载中"
                        android:textColor="#666666"
                        android:textSize="9sp" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/product_winners" />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="13dp"
                android:background="#D1D1D1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp">

                <TextView
                    android:id="@+id/tv_lleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="价值" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_lleft"
                    android:text="加载中"
                    android:textColor="#FE0000" />

                <TextView
                    android:id="@+id/tv_detils"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lleft"
                    android:layout_marginTop="8dp"
                    android:text="加载中"
                    android:textSize="11sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="13dp"
                android:background="#D1D1D1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#F3F3F3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:text="我的参与"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_minegoin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants" />

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_mine_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/interal_nodata"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#F3F3F3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:text="全部参与记录"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_allgoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants" />

                <RelativeLayout
                    android:id="@+id/rl_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_all_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/interal_nodata"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:visibility="gone"
        android:id="@+id/bt_go"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#FE0000"
        android:text="立即参与"
        android:textColor="@color/white"
        android:textSize="13sp" />
</FrameLayout>