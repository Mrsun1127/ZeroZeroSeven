<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ffn.zerozeroseven.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.ffn.zerozeroseven.view.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@mipmap/shoplocation" />

        <EditText
            android:textSize="13sp"
            android:id="@+id/et_adr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入详细的地址" />
    </LinearLayout>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/rl_vip"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="#EDEDED" />
    <LinearLayout
        android:id="@+id/ll_addLou"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@drawable/lou" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:id="@+id/et_lou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="楼栋号" />
    </LinearLayout>
    <View
        android:id="@+id/view_lineadd2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/rl_vip"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="#EDEDED" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@drawable/men" />

        <EditText
            android:textSize="13sp"
            android:id="@+id/et_men"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="宿舍号/教室/其他" />
    </LinearLayout>
    <View
        android:id="@+id/view_lineadd1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/rl_vip"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="#EDEDED" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@drawable/human" />

        <EditText
            android:id="@+id/et_name"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入联系人姓名" />
    </LinearLayout>

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="#EDEDED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@drawable/cell" />

        <EditText
            android:inputType="number"
            android:textSize="13sp"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入联系人电话号码" />
    </LinearLayout>

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="#EDEDED" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/bt_sub"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="完成"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/bg"/>
</LinearLayout>