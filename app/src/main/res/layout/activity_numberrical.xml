<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nobg">

    <com.ffn.zerozeroseven.view.TopView
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topView">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:background="@drawable/delete_one" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_computer"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="电脑"
                        android:textColor="@color/numberrical_text" />

                    <RadioButton
                        android:id="@+id/rb_phone"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:gravity="center"
                        android:text="手机"
                        android:textColor="@color/numberrical_text" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_quick"
                        android:layout_width="0dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"
                        android:background="@drawable/numberrical"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="促销"
                        android:textColor="@color/numberrical_text" />

                    <RadioButton
                        android:id="@+id/rb_hot"
                        android:layout_width="0dp"
                        android:layout_height="27dp"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"
                        android:background="@drawable/numberrical"
                        android:button="@null"
                        android:gravity="center"
                        android:text="热门品牌"
                        android:textColor="@color/numberrical_text" />

                    <RadioButton
                        android:id="@+id/rb_price"
                        android:layout_width="0dp"
                        android:layout_height="27dp"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"
                        android:background="@drawable/numberrical"
                        android:button="@null"
                        android:gravity="center"
                        android:text="价格"
                        android:textColor="@color/numberrical_text" />

                    <RadioButton
                        android:id="@+id/rb_scree"
                        android:layout_width="0dp"
                        android:layout_height="27dp"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"
                        android:background="@drawable/numberrical"
                        android:button="@null"
                        android:gravity="center"
                        android:text="屏幕尺寸"
                        android:textColor="@color/numberrical_text" />
                </RadioGroup>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_vetical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ImageView
        android:id="@+id/iv_shopcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_up"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/numberricalshopcar" />

    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="85dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/number_up" />
</RelativeLayout>