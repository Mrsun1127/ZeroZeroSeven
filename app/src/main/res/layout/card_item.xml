<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"

    >

    <LinearLayout
        android:id="@+id/ll_background"
        android:background="@drawable/topic_romance_bg"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/card_top_layout"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            >

            <TextView
                android:id="@+id/tv_project"
                android:layout_width="107dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/bg"
                android:gravity="center"
                android:text="美术学院"
                android:textColor="@color/white"
                android:textSize="9sp" />



            <TextView
                android:id="@+id/tv_detils"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_project"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="08级视觉传达设计2班     逗比2小花"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_detils"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="江南大野花 我想对你说"
                android:textColor="@color/text_show_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:paddingTop="20dp"
                android:text="我要跟你表白了 虽然好好好好    我可以陪你去看星星但是我也不差啊所以你以后不要再来找我了老鼠爱大米我爱你爱着你就像老鼠爱大米"
                android:textColor="@color/text_show_color"
                android:textSize="13sp" />

            <View
                android:id="@+id/maskView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:visibility="gone" />


        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_time"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2017-23-01 00:59:4"
            android:textSize="10sp" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/card_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="30dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/heart_hollow" />

            <TextView
                android:id="@+id/tv_likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_like"
                android:text="2017"
                android:textColor="@color/text_show_color"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/wishingwall_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="帮他扩散"
                    android:textSize="13sp"
                    android:textColor="@color/text_show_color" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>