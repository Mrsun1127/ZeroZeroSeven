<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ffn.zerozeroseven.view.TopView
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="41dp">
       <android.support.design.widget.TabLayout
           android:id="@+id/tablayout"
           android:layout_width="match_parent"
           android:layout_height="41dp"
           android:clickable="false"
           app:tabIndicatorColor="@color/white"
           app:tabSelectedTextColor="@color/errandtab"
           app:tabTextColor="@color/line_color"
           app:tabTextAppearance="@style/TextAppearance.Design.Tab.Custom"/>
       <Button
           android:background="@color/transtale"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>
   </RelativeLayout>

    <com.ffn.zerozeroseven.view.NoScrollViewPager
        android:layout_marginTop="2dp"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>