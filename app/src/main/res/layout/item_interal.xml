<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
         />

    <TextView
        android:singleLine="true"
        android:maxLength="20"
        android:textSize="10dp"
        android:id="@+id/tv_product_detils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_product"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="9dp"
        android:text="【138期】 HUAWEI/华为p260GB+128GB香槟金移动联通电信4G手机"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_detils">

        <TextView
            android:textSize="10sp"
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="27dp"
            android:text="距离开奖还差" />

        <TextView
            android:textSize="10sp"
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_left"
            android:textColor="#FC3835" />

        <TextView
            android:textSize="10sp"
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_count"
            android:text="积分" />

        <ProgressBar
            android:id="@+id/pb_watch"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_left"
            android:layout_marginLeft="27dp"
             />

        <TextView
            android:id="@+id/tv_progress"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pb_watch"
            android:paddingLeft="27dp"
            android:text="开奖进度 47%" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_product_detils"
        android:layout_marginTop="10dp">

        <TextView
            android:textSize="10sp"
            android:id="@+id/tv_count_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="开奖倒计时:"
            android:textColor="#FC3835" />

        <TextView
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_count_bottom"
            android:text="3:00 59s"
            android:textColor="#FC3835" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_load"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textSize="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tv_product_detils"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/startsign"
        android:text="参与抽奖"
        android:textColor="#FC3835" />
</RelativeLayout>