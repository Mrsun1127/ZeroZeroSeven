<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="17dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_gettime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="14dp"
        android:text="2017/01/4  2:00"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_runmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:layout_marginTop="60dp"
        android:text="¥2"
        android:textColor="@color/tab_under_line"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@+id/tv_runmoney"
        android:text="跑腿费:"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_smallmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:layout_marginTop="40dp"
        android:text="¥2"
        android:textColor="@color/tab_under_line"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/tv_smallmoney"
        android:text="小费:"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:layout_marginTop="14dp"
        android:text="已等待时间 8:00"
        android:textSize="11sp" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="7dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gettime"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="9dp"
        android:text="跑腿事项:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gettime"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/tv_type1"
        android:text="快递"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type1"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="12dp"
        android:text="取件地址:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_getadr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tv_type1"
        android:text="学校大门口"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_getadr"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="6dp"
        android:text="送达地址:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_arradr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/tv_getadr"
        android:layout_alignStart="@+id/tv_getadr"
        android:text="北栋3舍"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_arradr"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="15dp"
        android:text="接单人员:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_goodsweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_arradr"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_people"
        android:text="xxx"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />

    <TextView
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_people"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:text="联系电话:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_peoplephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_people"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_people"
        android:text="10086"
        android:textColor="@color/text_show_color"
        android:textSize="12sp" />


    <Button
        android:id="@+id/bt_status"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_smallmoney"
        android:layout_marginRight="21dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circlebutton"
        android:text="进行中"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/rl_action"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_status"
        android:layout_marginRight="21dp">

        <TextView
            android:id="@+id/tv_action"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="xxxx"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>