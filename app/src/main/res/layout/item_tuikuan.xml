<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp">


        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="84dp"
            android:layout_height="71dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/willdelete" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_product"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_product"
            android:text="联想(Lenovo)天逸510S 带19.5英寸台式电脑商用办公整机..."
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_configureation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_product"
            android:text="重量:4.140kg 颜色:FX63 配置:【10..."
            android:textSize="9sp" />

    </RelativeLayout>

</RelativeLayout>