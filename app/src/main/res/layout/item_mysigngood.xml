<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="39dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/willdelete"
        android:layout_width="49dp"
        android:id="@+id/iv_product"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/tv_name"
        android:textSize="13sp"
        android:layout_marginLeft="19dp"
        android:layout_alignTop="@+id/iv_product"
        android:layout_toRightOf="@+id/iv_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="正在加载中"/>
    <TextView
        android:id="@+id/tv_time"
        android:textSize="10sp"
        android:layout_marginLeft="19dp"
        android:layout_alignBottom="@+id/iv_product"
        android:layout_toRightOf="@+id/iv_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在加载中"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/iv_product"
        android:layout_marginRight="39dp"
        android:layout_alignParentRight="true"
        android:textColor="#FE0000"
        android:text="去领奖"
        android:gravity="center"
        android:textSize="9sp"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:background="@drawable/startsign"/>
</RelativeLayout>