<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ffn.zerozeroseven.view.TitleView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.ffn.zerozeroseven.view.TitleView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <com.ffn.zerozeroseven.view.StateLayout
            android:id="@+id/common_stateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_zhong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trancelate"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="321dp"
                android:layout_height="463dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/interal_zhong">

                <RelativeLayout
                    android:id="@+id/rl_close"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cancel_icon"/>
                <TextView
                    android:id="@+id/tv_one1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="145dp"
                    android:text="中奖啦"
                    android:textColor="#FFF13D"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_one2"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_one1"
                    android:layout_marginTop="5dp"
                    android:text="恭喜获得"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_one2"
                    android:layout_marginTop="10dp"
                    android:text="OPPO R11S星幕新年版手机"
                    android:textColor="#FFF13D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_one3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="5dp"
                    android:text="请填写您的领奖信息"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/et_name"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/et_name"
                    android:text="姓名"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tv_one3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/et_phone"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/et_phone"
                    android:text="电话"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/et_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/et_adr"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/et_adr"
                    android:text="地址"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_adr"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/et_phone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_adr"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="12dp"
                    android:text="客服将在24小时内与您联系，请保持电话畅通。请在"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_b1"
                    android:layout_marginLeft="39dp"
                    android:text="奖品有效期内填写信息并确认填写内容无误，过期未"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_b2"
                    android:layout_marginLeft="39dp"
                    android:text="填写视为自动放弃奖励。奖励有效期：5个工作日"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <Button
                    android:layout_centerHorizontal="true"
                    android:id="@+id/bt_sub"
                    android:layout_width="144dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/tv_b3"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yellowcirclesure"
                    android:text="提交"
                    android:textColor="#FF2B00" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>