<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <com.ffn.zerozeroseven.view.TopView
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ffn.zerozeroseven.view.UserDefineScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginTop="2dp"
                android:background="#f9f9f7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:text="18:16提交订单，预计明天上午12:00前送达"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/iv_sure"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/progress_number_sure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/iv_walk"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text="已确认"
                    android:textColor="@color/money"
                    android:textSize="11sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_walk"
                    android:layout_toRightOf="@+id/iv_sure"
                    android:background="@color/money" />

                <ImageView
                    android:id="@+id/iv_walk"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/progress_number_walk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_walk"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="配送中"
                    android:textColor="@color/money"
                    android:textSize="11sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_let"
                    android:layout_toRightOf="@+id/iv_walk"
                    android:background="@color/money" />

                <ImageView
                    android:id="@+id/iv_let"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/progress_number_let" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/iv_walk"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:text="已收货"
                    android:textColor="@color/money"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:text="下单时间：2018-06-16 18:24:06"
                    android:textSize="11sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="103dp"
                    android:layout_below="@+id/tv_time"
                    android:layout_marginTop="13dp"
                    android:background="#f9f9f7" />

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="69dp"
                    android:layout_height="57dp"
                    android:layout_below="@+id/tv_time"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/willdelete" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_product"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_product"
                    android:text="联想(Lenovo)天逸510S带19.5英寸台式电脑商..."
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/iv_product"
                    android:text="重量:4.140kg 颜色:FX63 配置：【10GB内存+256GB..."
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/iv_product"
                    android:layout_marginRight="9dp"
                    android:text="￥6599.00"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_oldmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_money"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="8dp"
                    android:text="￥7599.00"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_oldmoney"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="8dp"
                    android:text="x 1"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="12dp"
                    android:text="共1件商品  合计：￥6599.00 (运费￥0.00)"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="配送服务："
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_people"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="零零7跑腿小哥（null）为您服务"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="联系电话："
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="186****4826"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="订单时间："
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_starttime"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2018-06-12 18:16:26"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="收货时间："
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_lettime"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2018-06-12 18:16:26"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="客服电话："
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_tel"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0731-8888888"
                    android:textSize="11sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>
    </com.ffn.zerozeroseven.view.UserDefineScrollView>
</LinearLayout>