<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="61dp"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_show_color"
        android:id="@+id/tv_name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:text="王小雅"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_show_color"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="21dp"
        android:text="xxxxxxxxxxxx"/>
    <TextView
        android:id="@+id/tv_adr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_name"
        android:text="xxxxxxxxxxxxxxxxx"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/shopupdate"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>