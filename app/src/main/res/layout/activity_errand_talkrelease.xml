<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ffn.zerozeroseven.view.TopView
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ffn.zerozeroseven.view.UserDefineScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:text="你好，请评价我的配送服务"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <RadioGroup
                    android:id="@+id/rg_group"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_haihao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/talk_release_selecter"
                        android:gravity="center"
                        android:text="还好"
                        android:textColor="@drawable/talk_release_text_selecter" />

                    <RadioButton
                        android:id="@+id/rb_manyi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/talk_release_selecter_haihao"
                        android:gravity="center"
                        android:text="满意"
                        android:textColor="@drawable/talk_release_text_selecter" />

                    <RadioButton
                        android:id="@+id/rb_youxiu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/talk_release_selecter_youxiu"
                        android:gravity="center"
                        android:text="超赞"
                        android:textColor="@drawable/talk_release_text_selecter" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="29dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="76dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="跑腿速度"
                        android:textSize="13sp" />

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/sudu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        app:srb_clickable="false"
                        app:srb_starHeight="13dp"
                        app:srb_starPadding="4dp"
                        app:srb_starWidth="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="76dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务态度"
                        android:textSize="13sp" />

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/taidu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        app:srb_clickable="false"
                        app:srb_starHeight="13dp"
                        app:srb_starPadding="4dp"
                        app:srb_starWidth="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="76dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货物完整"
                        android:textSize="13sp" />

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/wanzheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        app:srb_clickable="false"
                        app:srb_starHeight="13dp"
                        app:srb_starPadding="4dp"
                        app:srb_starWidth="13dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_wenzi"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    android:background="#F5F5F5"
                    android:gravity="top|left"
                    android:hint="文字评价"
                    android:padding="25dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>
    </com.ffn.zerozeroseven.view.UserDefineScrollView>

    <Button
        android:text="提交评价"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#D9D9D9" />
</LinearLayout>