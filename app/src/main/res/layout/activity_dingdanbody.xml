<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ffn.zerozeroseven.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ffn.zerozeroseven.view.UserDefineScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/bt_status"
                android:layout_width="153dp"
                android:layout_height="38dp"
                android:layout_marginLeft="11dp"
                android:text="007已接单"
                android:textColor="@color/money"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_status"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="13dp"
                    android:text="xxx"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/bt_show"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/errandred"
                    android:textColor="@color/money" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_peple"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="20dp"
                    android:text="007跑腿小哥为您服务"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_peopleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/tv_left"
                    android:text="王大锤 为您服务"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_left"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="12dp"
                    android:text="电话"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_left"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/tv_bottom"
                    android:text="18888888888"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_sug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text="服务欠佳，投诉他？"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="备注 ：多放点辣椒"
                android:textColor="@color/text_show_color"
                android:textSize="13sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"/>

                <TextView
                    android:id="@+id/tv_allmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/rc_shop"
                    android:layout_marginBottom="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="13dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="完成时间：正在加载中"
                android:textColor="@color/text_show_color"
                android:textSize="13sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_endTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColor="@color/text_show_color"
                    android:textSize="13sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </com.ffn.zerozeroseven.view.UserDefineScrollView>


</LinearLayout>