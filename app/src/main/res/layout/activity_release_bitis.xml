<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ffn.zerozeroseven.view.TopView
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_talk"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@null"
        android:gravity="left|top"
        android:hint="今天的你有什么样的心情"
        android:paddingLeft="37dp"
        android:paddingTop="20dp"
        android:textColorHint="@color/line6"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_photo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:text="0/3"
        android:textColor="@color/line6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:paddingLeft="37dp">

        <ImageButton
            android:id="@+id/ib_add"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:background="@drawable/bt_addphoto" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="93dp" />
    </LinearLayout>
</LinearLayout>