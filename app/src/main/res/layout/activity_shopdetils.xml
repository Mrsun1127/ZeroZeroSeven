<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            >
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/shopback" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="73dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="12dp"
                    android:text="气泡饮料"
                    android:textColor="@color/text_show_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_peoplephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="17dp"
                    android:text="¥0.2"
                    android:textColor="@color/tab_under_line"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_kucun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_toRightOf="@+id/tv_peoplephone"
                    android:text="库存16" />

                <ImageButton
                    android:id="@+id/ib_add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/add" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="44dp"
                    android:layout_toLeftOf="@+id/ib_add"
                    android:text="0" />

                <ImageButton
                    android:id="@+id/ib_lose"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="28dp"
                    android:layout_toLeftOf="@+id/tv_count"
                    android:background="@drawable/lose" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:visibility="visible"
                    android:id="@+id/tv_addshopcar"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="104dp"
                    android:layout_height="29dp"
                    android:text="加入购物车"
                    android:background="@drawable/circlebt"/>
            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_phone"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_show_color"
                android:text="商家电话：正在加载中"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_show_color"
                android:text="商品描述"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_desc"
                    android:textColor="@color/text_show_color"
                    android:textSize="11sp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">
            <TextView
                android:id="@+id/tv_allmoney"
                android:layout_marginLeft="89dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中"
                android:textSize="16sp"
                android:textColor="@color/text_show_color"/>
            <TextView
                android:id="@+id/tv_smallmoney"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="89dp"
                android:layout_below="@+id/tv_allmoney"
                android:layout_marginTop="5dp"
                android:text="加载中"/>
            <Button
                android:id="@+id/bt_pay"
                android:text="立即购买"
                android:textColor="@color/white"
                android:layout_width="104dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_zzs"
        android:layout_gravity="bottom"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="19dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/zzsproject"/>
</FrameLayout>